<div class="bookers-main">
    <h1>Books</h1>
        <h3>Title</h3>
    <% @books.each do |book| %>
        <span class="book-title"><%= link_to book.title, "/bookers/#{book.id}" %></span>
        <span class="book-body"><%= book.body %></p></span>
    <% end %>
    
    <h1>New book</h1>
    
    <%= form_with model: @book, url: '/bookers', local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Body</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Submit' %>
    <% end %>
</div>